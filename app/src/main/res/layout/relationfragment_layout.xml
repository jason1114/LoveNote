<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="io.github.jason1114.lovenote.main.RelationFragment"
             android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/refresh_light"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
                android:text="@string/my_secret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_secret"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_secret_value"
                android:background="@drawable/textview_round_corners"
                android:padding="20sp"
                android:textSize="40sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                />
        <TextView
                android:text="@string/enter_others_secret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/the_others_secret"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/the_others_secret_value"
                android:background="@drawable/edittext_round_corners"
                android:padding="20sp"
                android:textSize="40sp"
                android:singleLine="true"
                android:hint="@string/the_others_secret"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                />
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/complete"
                android:background="@drawable/flat_blue_button"
                android:textColor="@color/white"
                android:padding="10sp"
                android:textAlignment="center"
                />

    </LinearLayout>

</FrameLayout>
